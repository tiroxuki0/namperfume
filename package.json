{
  "name": "connectbridge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 8000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:imports": "eslint . --ext ts --ext tsx --ext js --fix",
    "lint-staged": "lint-staged",
    "check:types": "tsc --pretty --noEmit",
    "check:lint": "eslint . --ext ts --ext tsx --ext js",
    "check:format": "prettier --check .",
    "format": "prettier --write .",
    "format:tailwind": "prettier --write . --plugin=prettier-plugin-tailwindcss",
    "code:fix": "npm run lint:fix && npm run format:tailwind",
    "code:check": "npm run check:types && npm run check:lint && npm run check:format",
    "prepare": "husky install",
    "mlm": "node language-script/index.js"
  },
  "dependencies": {
    "@ant-design/charts": "^2.2.6",
    "@ant-design/cssinjs": "^1.21.1",
    "@rails/actioncable": "^7.2.100",
    "@tanstack/react-query": "^5.56.2",
    "@tanstack/react-query-devtools": "^5.60.5",
    "@types/cookies": "^0.9.0",
    "@types/http-proxy": "^1.17.15",
    "@types/humps": "^2.0.6",
    "@types/lodash": "^4.17.7",
    "antd": "^5.20.6",
    "chalk": "^5.3.0",
    "clsx": "^2.1.1",
    "commander": "^12.1.0",
    "cookies": "^0.9.1",
    "cookies-next": "^4.2.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "http-proxy": "^1.18.1",
    "humps": "^2.0.1",
    "i18next": "^23.15.1",
    "i18next-resources-to-backend": "^1.2.1",
    "isomorphic-fetch": "^3.0.0",
    "lint-staged": "^15.5.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "next": "^14.2.11",
    "next-http-proxy-middleware": "^1.2.6",
    "next-i18n-router": "^5.5.1",
    "next-runtime-env": "^3.2.2",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.0.0",
    "qs": "^6.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.0.2",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zustand": "^5.0.0-rc.2"
  },
  "devDependencies": {
    "@eslint/js": "8.57.0",
    "@svgr/webpack": "^8.1.0",
    "@types/ip": "^1.1.3",
    "@types/node": "^20",
    "@types/qs": "^6.9.16",
    "@types/rails__actioncable": "^6.1.11",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "eslint": "8.57.0",
    "eslint-config-next": "^15.2.5",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.36.1",
    "globals": "^15.9.0",
    "husky": "^8.0.0",
    "postcss": "^8.5.6",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pretty-quick --staged",
      "eslint --fix"
    ]
  }
}
